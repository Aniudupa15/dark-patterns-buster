{
  "manifest_version": 2,
  "name": "Dark Pattern Detector",
  "version": "1.0",
  "description": "Detect and highlight dark patterns on websites.",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "48": "icon.png"
  },
  "permissions": [
    "storage",
    "activeTab"
  ]
}
